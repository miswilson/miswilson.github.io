{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/miswilson/miswilson.github.io/refs/heads/main/fashion_20s.csv",
    "format": {"parse": {"Start Date": "date"}}
  },
  "title": {
    "text": ["", "──", "Trend Patterns in Economic Boom"],
    "subtitle": [
      "Interactive Chart on Trending Fashion Features", "Measured by Mentions in Vogue by Release Date (Roaring 20s)",
      "Source: Vogue Archieves",
      ""
    ],
    "subtitleFontStyle": "",
    "subtitleFontSize": 11,
    "fontSize": 12,
    "subtitleFontWeight": 100,
    "anchor": "start",
    "color": "black"
  },
  "config": {
    "axisX": {"grid": false, "title": null},
    "view": {"strokeOpacity": 0}
  },
  "transform": [
    {
      "calculate": "datum.Term === 'fur' ? 'Fur' : datum.Term === 'sequins' ? 'Sequins' : datum.Term === 'glitter' ? 'Glitter' : datum.Term === 'flapper' ? 'Flapper' : datum.Term",
      "as": "RenamedTerm"
    }
  ],
  "facet": {
    "column": {"field": "RenamedTerm", "type": "nominal", "title": " "}
  },
  "selection": {
    "hover": {
      "type": "point",
      "on": "pointerover",
      "clear": "pointerout",
      "encodings": ["x", "y"]
    }
  },
  "spec": {
    "mark": "line",
    "encoding": {
      "x": {"field": "Start Date", "type": "temporal", "title": ""},
      "y": {
        "field": "Result Count",
        "type": "quantitative",
        "title": "",
        "scale": {"type": "linear"}
      },
      "color": {
        "field": "RenamedTerm",
        "type": "nominal",
        "title": "Trending Design",
        "scale": {"range": ["pink", "orange", "turquoise", "green"]}
      }
    },
    "layer": [
      {"mark": "line"},
      {
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["Start Date"],
              "on": "mouseover",
              "clear": "mouseout"
            }
          }
        ],
        "mark": {"type": "circle", "tooltip": true},
        "encoding": {
          "x": {"field": "Start Date", "type": "temporal"},
          "y": {"field": "Result Count", "type": "quantitative", "title": "Popularity by Article Mentions",
          "axis": {
                "titleAngle": 0,
                "titleY": -3,
                "titleX": 0,
                "titleAlign": "left",
                "titleFontWeight": "lighter",
                "titleFontSize": 10
              }},
          "color": {"field": "RenamedTerm", "type": "nominal"},
          "tooltip": [
            {
              "field": "Start Date",
              "title": "Year",
              "type": "temporal",
              "format": "%Y"
            },
            {
              "field": "Result Count",
              "title": "Mentions",
              "type": "quantitative"
            }
          ],
          "opacity": {
            "condition": {
              "test": {"param": "hover", "empty": false},
              "value": 1
            },
            "value": 0
          },
          "size": {
            "condition": {
              "test": {"param": "hover", "empty": false},
              "value": 48
            },
            "value": 100
          }
        }
      }
    ]
  },
  "resolve": {"scale": {"y": "independent"}}
}