{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": [
        "",
        "How the Female Labor Force Shapes Fashion Trends",
        "The Changing Trajectory of Clothes as Women Join the Labour Force Worldwide"
      ],
      "fontSize": 14
    },
    "config": {"background": "white", "view": {"stroke": "transparent"}},
    "hconcat": [
      {
        "title": {
          "text": ["", "──", "Female Labour Force Participation"],
          "subtitle": [
            "Share of women in the workforce (%), 1900-2016",
            "Proportion of economically active women, aged 15+",
            ""
          ],
          "subtitleFontStyle": "",
          "subtitleFontSize": 11,
          "fontSize": 12,
          "subtitleFontWeight": 100,
          "anchor": "start",
          "color": "black"
        },
        "width": 350,
        "data": {
          "url": "https://raw.githubusercontent.com/miswilson/miswilson.github.io/refs/heads/main/female-labor-force-participation-oecd.csv"
        },
        "selection": {
          "hover": {
            "type": "point",
            "on": "pointerover",
            "clear": "pointerout",
            "encodings": ["x", "y"]
          }
        },
        "mark": "line",
        "encoding": {
          "x": {"field": "Year", "type": "temporal", "title": ""},
          "y": {
            "field": "Participation",
            "type": "quantitative",
            "title": "",
            "scale": {"type": "linear"}
          },
          "fill": {
            "field": "Entity",
            "type": "nominal",
            "title": "Country",
            "legend": {
              "orient": "bottom",
              "titleFontSize": 12,
              "labelFontSize": 10
            }
          }
        },
        "layer": [
          {"mark": "circle"},
          {
            "params": [
              {
                "name": "hover",
                "select": {
                  "type": "point",
                  "fields": ["Year"],
                  "on": "mouseover",
                  "clear": "mouseout"
                }
              }
            ],
            "mark": {"type": "circle", "tooltip": true},
            "encoding": {
              "x": {"field": "Year", "type": "temporal"},
              "y": {"field": "Participation", "type": "quantitative"},
              "color": {
                "field": "Entity",
                "type": "nominal",
                "legend": {"orient": "left"}
              },
              "tooltip": [
                {
                  "field": "Year",
                  "type": "temporal",
                  "title": "Year",
                  "format": "%Y"
                },
                {"field": "Entity", "type": "nominal", "title": "Country"},
                {
                  "field": "Participation",
                  "type": "quantitative",
                  "title": "Participation (%)",
                  "format": ".2f"
                }
              ],
              "opacity": {
                "condition": {
                  "test": {"param": "hover", "empty": false},
                  "value": 1
                },
                "value": 0
              },
              "size": {
                "condition": {
                  "test": {"param": "hover", "empty": false},
                  "value": 48
                },
                "value": 100
              }
            }
          }
        ]
      },
      {
        "title": {
          "text": ["", "──", "Trendline of Women in Suits vs Skirts"],
          "subtitle": [
            "Trendline of the emergence of women in suits vs skirts, 1900-2022",
            "Source: Vogue Archives",
            ""
          ],
          "subtitleFontStyle": "",
          "subtitleFontSize": 11,
          "fontSize": 12,
          "subtitleFontWeight": 100,
          "anchor": "start",
          "color": "black"
        },
        "data": {
          "url": "https://raw.githubusercontent.com/miswilson/miswilson.github.io/refs/heads/main/lfw_df.csv"
        },
        "width": 350,
        "transform": [
          {
            "calculate": "datum.term === 'suit' ? 'Suit' : datum.term === 'skirt' ? 'Skirt' : datum.term",
            "as": "term"
          },
          {
            "lookup": "start_date",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/miswilson/miswilson.github.io/refs/heads/main/skirt_df.csv"
              },
              "key": "start_date",
              "fields": ["count"]
            },
            "as": ["skirt_count"]
          },
          {"calculate": "year(datetime(datum.start_date))", "as": "year"},
          {"calculate": "floor(datum.year / 10) * 10", "as": "decade"},
          {
            "calculate": "datum.term === 'skirt' ? datum.skirt_count || datum.count : datum.count",
            "as": "total_count"
          },
          {
            "aggregate": [
              {"op": "sum", "field": "total_count", "as": "aggregated_count"}
            ],
            "groupby": ["decade", "term"]
          },
          {
            "joinaggregate": [
              {
                "op": "sum",
                "field": "aggregated_count",
                "as": "total_skirt",
                "groupby": ["decade"]
              },
              {
                "op": "sum",
                "field": "aggregated_count",
                "as": "total_suit",
                "groupby": ["decade"]
              }
            ],
            "groupby": ["decade", "term"]
          },
          {
            "calculate": "datum.term === 'skirt' ? datum.total_skirt - datum.total_suit : datum.total_suit - datum.total_skirt",
            "as": "count_diff"
          }
        ],
        "mark": {"type": "point", "tooltip": true},
        "encoding": {
          "y": {
            "field": "aggregated_count",
            "type": "quantitative",
            "title": "Popularity of 'Suits' vs 'Skirts' based on occurance in Vogue",
            "axis": {
              "titleAngle": 0,
              "titleY": -3,
              "titleX": 0,
              "titleAlign": "left",
              "titleFontWeight": "lighter",
              "titleFontSize": 10
            }
          },
          "x": {
            "field": "decade",
            "type": "ordinal",
            "title": "",
            "axis": {"labelAngle": 0}
          },
          "color": {
            "field": "term",
            "type": "nominal",
            "scale": {
              "domain": ["Suit", "Skirt"],
              "range": ["#db646f", "#7ac2d0"]
            },
            "title": "Style",
            "legend": {
              "orient": "bottom",
              "titleFontSize": 12,
              "labelFontSize": 10
            }
          },
          "tooltip": [
            {"field": "term", "type": "nominal", "title": "Term"},
            {"field": "decade", "type": "ordinal", "title": "Decade"},
            {
              "field": "aggregated_count",
              "type": "quantitative",
              "title": "Total Mentions"
            }
          ]
        },
        "layer": [
          {
            "mark": "rule",
            "encoding": {
              "x": {"field": "decade", "type": "ordinal"},
              "y": {"field": "aggregated_count", "type": "quantitative"},
              "color": {
                "field": "term",
                "type": "nominal",
                "scale": {
                  "domain": ["Suit", "Skirt"],
                  "range": ["#db646f", "#7ac2d0"]
                }
              }
            }
          },
          {
            "mark": "point",
            "encoding": {
              "x": {"field": "decade", "type": "ordinal"},
              "y": {"field": "aggregated_count", "type": "quantitative"},
              "color": {
                "field": "term",
                "type": "nominal",
                "scale": {
                  "domain": ["Suit", "Skirt"],
                  "range": ["#db646f", "#7ac2d0"]
                }
              },
              "tooltip": [
                {"field": "term", "type": "nominal", "title": "Clothing Term"},
                {"field": "decade", "type": "ordinal", "title": "Decade"},
                {
                  "field": "aggregated_count",
                  "type": "quantitative",
                  "title": "Total Mentions"
                }
              ]
            }
          }
        ]
      }
    ]
  }